<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_bg_recipe_0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/fl_recipe"
                                android:layout_marginLeft="50dp"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.kgv.cookbook.ui.Ch2TextView
                                    android:id="@+id/tvA1"
                                    android:text="食谱"
                                    android:textSize="@dimen/main_text_ch"
                                    android:textColor="@color/main_s"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <com.kgv.cookbook.ui.EnTextView
                                    android:id="@+id/tvA2"
                                    android:layout_marginTop="5dp"
                                    android:text="RECIPES"
                                    android:textSize="@dimen/main_text_en"
                                    android:textColor="@color/main_s"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fl_manager"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="50dp"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.kgv.cookbook.ui.Ch2TextView
                                    android:id="@+id/tvB1"
                                    android:text="健康管理"
                                    android:textSize="@dimen/main_text_ch"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <com.kgv.cookbook.ui.EnTextView
                                    android:id="@+id/tvB2"
                                    android:layout_marginTop="5dp"
                                    android:text="HEALTH MANAGEMENT"
                                    android:textSize="@dimen/main_text_en"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/main_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/fl_application"
                                android:layout_marginLeft="80dp"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.kgv.cookbook.ui.Ch2TextView
                                    android:id="@+id/tvC1"
                                    android:text="应用"
                                    android:textSize="@dimen/main_text_ch"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <com.kgv.cookbook.ui.EnTextView
                                    android:id="@+id/tvC2"
                                    android:layout_marginTop="5dp"
                                    android:text="APPLICATION"
                                    android:textSize="@dimen/main_text_en"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fl_setup"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="50dp"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.kgv.cookbook.ui.Ch2TextView
                                    android:id="@+id/tvD1"
                                    android:text="设置"
                                    android:textSize="@dimen/main_text_ch"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <com.kgv.cookbook.ui.EnTextView
                                    android:id="@+id/tvD2"
                                    android:layout_marginTop="5dp"
                                    android:text="SET UP"
                                    android:textSize="@dimen/main_text_en"
                                    android:textColor="#323232"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"/>
                    </LinearLayout>

                    <!--<FrameLayout-->
                        <!--android:id="@+id/fl_recipe"-->
                        <!--android:layout_width="160dp"-->
                        <!--android:layout_height="match_parent"/>-->

                    <!--<FrameLayout-->
                        <!--android:id="@+id/fl_manager"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="match_parent"/>-->

                    <!--<FrameLayout-->
                        <!--android:id="@+id/fl_application"-->
                        <!--android:layout_width="160dp"-->
                        <!--android:layout_marginLeft="290dp"-->
                        <!--android:layout_height="match_parent"/>-->

                    <!--<FrameLayout-->
                        <!--android:id="@+id/fl_setup"-->
                        <!--android:layout_marginLeft="50dp"-->
                        <!--android:layout_width="160dp"-->
                        <!--android:layout_height="match_parent"/>-->
                </LinearLayout>


                <FrameLayout
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="110dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/fl_all_mate"
                            android:layout_width="230dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_food_world"
                            android:layout_width="230dp"
                            android:layout_marginRight="40dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_week"
                            android:layout_width="230dp"
                            android:layout_marginRight="40dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_set_meal"
                            android:layout_width="230dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_application"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:id="@+id/fl_video"
                            android:layout_width="230dp"
                            android:layout_marginLeft="135dp"
                            android:layout_marginRight="40dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_music"
                            android:layout_width="230dp"
                            android:layout_marginRight="40dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_app"
                            android:layout_width="230dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_set_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:id="@+id/fl_system"
                            android:layout_width="192dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_family"
                            android:layout_width="192dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_voice"
                            android:layout_width="192dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_interest"
                            android:layout_marginRight="20dp"
                            android:layout_width="192dp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_password"
                            android:layout_marginRight="20dp"
                            android:layout_width="192dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <include layout="@layout/include_bottom"/>

    <FrameLayout
        android:id="@+id/fl_search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:src="@drawable/main_search"/>

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/base_et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:hint=" 菜谱/食材"
                android:paddingLeft="4dp"
                android:textColor="#b28750"
                android:textCursorDrawable="@null"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/base_tv_go"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#b28750"
                android:gravity="center"
                android:text="GO"
                android:textColor="#fff"
                android:textSize="22sp"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>