<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F7F6"
            android:orientation="vertical">

            <!--实际做菜-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#BCA281">

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="23sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="实际做菜摄入量"
                        android:textColor="#fff"
                        android:textSize="23sp"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="早餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_real_breakfast"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="午餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_real_lunch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="晚餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_real_dinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_real"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="实际摄入量："
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_real_sum"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="12381293(大卡)"
                            android:textColor="@color/text_color_brown"
                            android:textSize="18sp"/>

                        <ImageView
                            android:id="@+id/iv_status_real"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@+id/ivMsg1"
                            android:layout_width="wrap_content"
                            android:src="@drawable/i"
                            android:layout_marginRight="12dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>

                    <TextView
                        android:id="@+id/tv_real_standard_sum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="标准摄入量：12736781~12381721(大卡)"
                        android:textColor="@color/bg_color_black"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>

                    <TextView
                        android:id="@+id/tv_real_result"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="结果：超标"
                        android:textColor="@color/bg_color_black"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>
                </LinearLayout>
            </LinearLayout>
            <!--实际结束-->
            <!--建议开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#BCA281"
                    android:gravity="center"
                    android:text="系统推荐一周菜谱摄入量"
                    android:textColor="#fff"
                    android:textSize="23sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="早餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_suggest_breakfast"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="午餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_suggest_lunch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="#E5E5E5"
                            android:gravity="center"
                            android:text="晚餐"
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>

                        <ListView
                            android:id="@+id/lv_suggest_dinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:divider="@color/gray_line"
                            android:dividerHeight="1dp"
                            android:listSelector="@android:color/transparent"
                            android:scrollbars="none"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_suggest"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="实际摄入量："
                            android:textColor="@color/bg_color_black"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_suggest_sum"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="12381293(大卡)"
                            android:textColor="@color/text_color_brown"
                            android:textSize="18sp"/>

                        <ImageView
                            android:id="@+id/iv_status_suggest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@+id/ivMsg2"
                            android:layout_width="wrap_content"
                            android:src="@drawable/i"
                            android:layout_marginRight="12dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>

                    <TextView
                        android:id="@+id/tv_suggest_standard_sum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="标准摄入量：12736781~12381721(大卡)"
                        android:textColor="@color/bg_color_black"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>

                    <TextView
                        android:id="@+id/tv_suggest_result"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="结果：超标"
                        android:textColor="@color/bg_color_black"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line"/>
                </LinearLayout>
            </LinearLayout>
            <!--建议结束-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#E5E5E5"
                    android:gravity="center"
                    android:text="建议"
                    android:textColor="@color/bg_color_black"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line"/>
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/bg_color_black"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>


        <include layout="@layout/include_bottom"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:src="@drawable/main_search"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/base_et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:hint=" 菜谱/食材"
                android:paddingLeft="4dp"
                android:textColor="#b28750"
                android:textCursorDrawable="@null"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/base_tv_go"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#b28750"
                android:gravity="center"
                android:text="GO"
                android:textColor="#fff"
                android:textSize="22sp"/>
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/llPop1"
        android:gravity="center_vertical"
        android:layout_marginTop="219dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/pop_shape_bg"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/a"
            android:text="提示：牛奶、谷物是系统默认按\n照常人一天的米饭牛奶摄入量。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivPop1"
            android:src="@drawable/family_item_delete"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llPop2"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/pop_shape_bg"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/a"
            android:text="提示：牛奶、谷物是系统默认按\n照常人一天的米饭牛奶摄入量。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivPop2"
            android:src="@drawable/family_item_delete"
            android:layout_width="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</RelativeLayout>